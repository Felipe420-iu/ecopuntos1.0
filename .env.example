# EcoPuntos - Variables de Entorno
# Copia este archivo como .env y configura tus valores reales

# Django Settings
SECRET_KEY=tu-clave-secreta-super-segura-aqui
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,tu-dominio.com

# Base de Datos
DATABASE_URL=postgresql://usuario:password@localhost:5432/ecopuntos
# O para desarrollo local con SQLite:
# DATABASE_URL=sqlite:///db.sqlite3

# Supabase
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_KEY=tu-clave-publica-de-supabase

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-password-de-aplicacion
DEFAULT_FROM_EMAIL=Eco Puntos <noreply@ecopuntos.com>

# ====================================
# INSTRUCCIONES PARA CONFIGURAR GMAIL:
# ====================================
# 1. Ve a tu cuenta de Google → Gestión de Cuenta
# 2. Seguridad → Verificación en 2 pasos (debe estar activada)
# 3. Contraseñas de aplicaciones → Generar nueva
# 4. Selecciona "Correo" y tu dispositivo
# 5. Usa la contraseña generada en EMAIL_HOST_PASSWORD
# 6. Copia este archivo como .env y configura tus valores
DEFAULT_FROM_EMAIL=EcoPuntos <tu-email@gmail.com>

# Redis (para cache y WebSockets)
REDIS_URL=redis://localhost:6379/0

# Configuración de Producción
USE_HTTPS=True
SECURE_SSL_REDIRECT=True

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/ecopuntos.log